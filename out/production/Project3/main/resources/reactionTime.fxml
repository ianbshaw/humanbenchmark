<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<Pane fx:id="root"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.backend.ReactionTime"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #0282e5">

    <Button text="Home"
            onAction="#homeClicked"/>

    <VBox layoutX="250" layoutY="100">
        <Label fx:id="welcome"
               textFill="white"
               text="Click the screen to start!">
            <font>
                <Font name="Arial-Black" size="25"/>
            </font>
        </Label>
        <Label fx:id="reactionTime"
               visible="false"
               textFill="white"
               alignment="CENTER">
            <font>
                <Font name="Arial-Black" size="25"/>
            </font>
        </Label>
    </VBox>
</Pane>
